{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build/debug",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_TOOLCHAIN_FILE=${CMAKE_TOOLCHAIN_FILE}",
                "${workspaceFolder}"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Build: Core Library",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "core"
            ],
            "dependsOn": "CMake: Configure",
            "group": "build"
        },
        {
            "label": "Build: Server",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "server"
            ],
            "dependsOn": "CMake: Configure",
            "group": "build"
        },
        {
            "label": "Build: Client GUI",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "client_gui"
            ],
            "dependsOn": "CMake: Configure",
            "group": "build"
        },
        {
            "label": "Build: Client Discord",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "client_discord"
            ],
            "dependsOn": "CMake: Configure",
            "group": "build"
        }
    ]
}